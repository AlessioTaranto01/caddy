{
	# Global options
	admin localhost:2019
	log {
		level INFO
		format console
	}
}

# The caddy-docker-proxy module automatically generates configurations from Docker labels.
# No global configuration is needed - the plugin scans Docker containers/services automatically.
#
# NOTE: Layer 4 (TCP/UDP) proxying with caddy-l4 module requires JSON configuration.
# The caddy-l4 module does not support Caddyfile format. For Layer 4 proxying,
# you need to use JSON configuration or adapt the Caddyfile to JSON and merge
# with Layer 4 configuration.
# 
# For HTTP services with Docker labels:
# caddy: test.hoponmobility.com
# caddy.reverse_proxy: '{{upstreams 8080}}'
# caddy.tls: internal
# 
# This will create:
# test.hoponmobility.com {
#     reverse_proxy {{upstreams 8080}}
#     tls internal
# }
#
# For additional HTTP services:
# caddy_1: admin.test.hoponmobility.com
# caddy_1.reverse_proxy: '{{upstreams 9102}}'
# 
# This will create:
# admin.test.hoponmobility.com {
#     reverse_proxy {{upstreams 9102}}
# }

# Default response for unmatched requests
:80 {
	respond "Caddy Proxy Server is running" 200
	header Content-Type "text/plain"
}